    #set($pDescription = $!{URLMapContent.seoDescription})
    #set($pCanonical = "https://demo.dotcms.com" + $!{request.getAttribute("javax.servlet.forward.request_uri")})
    #if($UtilMethods.isSet($URLMapContent.image))
        #set($pImage = "/dA/$URLMapContent.identifier/1200w/50q/$URLMapContent.image.name")
    #else
        #set($pImage = "/img/default.png")
    #end

## SET PAGE META TAGS IF STATIC PAGE
#else
    #set($pTitle = $!{HTMLPAGE_FRIENDLY_NAME})
    #set($pDescription = $!{HTMLPAGE_DESCRIPTION})
    #set($pKeywords = $!{HTMLPAGE_KEYWORDS})
    #if($UtilMethods.isSet($URLMapContent.canonicalUrl))
        #set($pCanonical = "https://demo.dotcms.com" + $!{dotPageContent.canonicalUrl})
    #else
        #set($pCanonical = "https://demo.dotcms.com" + $!{request.getAttribute("javax.servlet.forward.request_uri")})
    #end
    #set($pImage = "/images/default.png")
